<div class="row">
<h1 class="text-center">Public Recipes</h1>
<% @recipes.each do |recipe|%>
<div class="col-md-3">
<div class="shadow-lg m-3 bg-white public-card">
    <div class="card-body">
      <%= link_to recipe_path(recipe.id) do %>
        <h5 class="card-title py-3"><%= recipe.name %></h3>
        <p class="card-text"><%= truncate(recipe.description, length: 90, omission: '...') %></p>
        <h3 class="btn", style= "background-color: var(--primary-color); color: var(--white)">View Recipe</h3>
      <% end %>
    </div>
</div>
</div>
<% end %>
</div>
