<p style="color: green"><%= notice %></p>

<h1>Recipes</h1>

<div id="recipes">
  <% @recipes.each do |recipe| %>
    <%= render recipe %>
    <p>
      <%= link_to "Show this recipe", recipe %>
    </p>
  <% end %>
</div>

<%= link_to "New recipe", new_recipe_path %>

<div class="container-fluid">
  <% if @recipes.empty? %>
    <h2>No recipes available</h2>
    <%= link_to "Add new recipe", new_recipe_path %>
  <% else %>

    <h3>My Recipes</h3>
    <div>
      <%= link_to "Add new recipe", new_recipe_path %>
    </div>

    <% @recipes.each do |recipe| %>
      <div class="container-fluid mb-4">
        <div class="row border border-1">
            <div class="col-sm-3">
              <h4><%= recipe.name %></h4>
              <div>
                <%= link_to "Recipe Details", recipe_path(recipe.id) %>

                <div>
                <%= link_to "Recipe Details", recipe_path(recipe.id) %>
                  <% if can? :destroy, recipe %>
                    <%= button_to "Remove", recipe_path(recipe.id), method: :delete %>
                  <% end %>
                </div>
              </div>
          </div>
          <div class="col col-sm-9">
            <p class="card-text"><%= recipe.description %></p>
          </div>
        </div>
      </div>
    <% end %>

  <% end %>
</div>
