<div class="row">
  <div class="mb-3 col-md-8 offset-md-2">
    <div class="row g-0">
      <div class="col-md-12 background shadow">
        <div class="card-body transbox">

            <h4 class="card-title my-5 text-center">Add New Food</h4>

          <%= form_with model: @food, url: foods_path do |f| %>
            <div class="form-floating mb-3">
            <%= f.hidden_field :user_id, value: current_user.id %>
            </div>

            <div class="form-floating mb-3">
            <%= f.text_field :name, class: "form-control", required: true, placeholder: 'Name of Food' %>
            </div>

            <div class="form-floating mb-4">
            <%= f.select :measurement_unit, [['grams', 'g'], ['kilograms', 'kg'], ['milligrams', 'ml'], ['liter', 'l'], ['ounces', 'oz'], ['pound', 'lb'], ['cup', 'cup'], ['pint', 'pint'], ['quart', 'quart'], ['gallon', 'gallon']], {:include_blank => "-", :required => true}, {:class => 'form-control'} %>
            <%= f.label :measurement_unit, "measurement unit" %>
            <div>

            <div class="form-floating mb-3">
            <%= f.number_field :price, class: "form-control", required: true %>
            <%= f.label :price, "Unit price($) *" %>
            </div>

            <div class="form-floating mb-3">
            <%= f.number_field :quantity, class: "form-control", required: true %>
            <%= f.label :quantity, "Quantity(0) *" %>
            </div>


            <div class="form-group mt-3">
            <%= f.submit "Add Food", class: "btn", style: "background-color: var(--primary-color); color: var(--white);", data: {disable_with: "Loading..."} %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>